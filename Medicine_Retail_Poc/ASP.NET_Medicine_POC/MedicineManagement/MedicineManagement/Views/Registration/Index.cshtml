@model DataAccessLayer.Domain.Registration

<h2>Registration</h2>

<link href="/css/bootstrap.min.css" rel="stylesheet" />
@Html.ValidationSummary()
<div class="container">
    <div class="row">
        <div class="col-md-6 center-block">

            <form asp-action="Index" method="post">
                <div class="form-group">
                    <label>FirstName</label>
                    <input type="text" class="form-control" asp-for="FirstName" />
                    <span class="text-danger" asp-validation-for="FirstName"></span>
                </div>

                <div class="form-group">
                    <label>LastName</label>
                    <input type="text" class="form-control" asp-for="LastName" />
                    <span class="text-danger" asp-validation-for="LastName"></span>
                </div>

                <div class="form-group">
                    <label>Email</label>
                    <input type="text" class="form-control" asp-for="Email" />
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>

                <div class="form-group">
                    <label>Contact</label>
                    <input type="text" class="form-control" asp-for="Contact" />
                    <span class="text-danger" asp-validation-for="Contact"></span>
                </div>

                <div class="form-group">
                    <label>Password (eg. John@123)</label>
                    <input type="password" class="form-control" asp-for="Password" />
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>

                <div class="form-group">
                    <label>Password confirm</label>
                    <input type="password" class="form-control" asp-for="ConfirmPassword" />
                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                </div>

               @* <div class="form-group">
                    <label>
                        @Html.CheckBoxFor(m => m.IsAdmin)
                        Admin
                    </label>
                </div>*@

                <div class="form-group" style="margin-top: 20px;">
                    <button type="submit" style="background-color: #244b81; color: white"; onclick="showMessage()">Register</button>
                </div>

            </form>
        </div>
    </div>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        function showMessage() {
            alert("Registration Successfull!");
        }
    </script>
}