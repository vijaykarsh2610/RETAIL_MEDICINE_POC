@model DataAccessLayer.Domain.Medicine
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Disease.cshtml";
}



<!-- Message Overlay for Center Display -->
<div class="centered" id="messageCenter">
    @if (TempData["MedicineMessage"] != null)
    {
        <div class="alert alert-@(TempData["MedicineMessage"].ToString().Contains("successfully") ? "success" : "danger")">
            @TempData["MedicineMessage"]
        </div>
    }
</div>

<!-- Rest of your view content -->

<!DOCTYPE html>
<html>
<head>
    <!-- Include the Bootstrap CSS link -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <style>

        /* Center Message Overlay Styles */
        .centered {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 9999;
        }

        /* Adjust the width and spacing of the form container */
        .form-container {
            width: 80%;
            margin: 8px 50px;
            padding: 7px 15px;
            border: 3px solid #f1f1f1;
            border-color: #244b81;
        }

        h1 {
            text-align: center; /* Center the heading */
        }

        /* Add border to all input fields */
        input[type="text"],
        select,
        input[type="file"],
        input[type="date"] {
            border: 1px solid #f1f1f1;
            border-color: black;
            padding: 6px 12px;
            width: 100%;
        }

    </style>

</head>
<body>
    <h2 style="margin-left:85px; text-align: left; margin-bottom:10px; margin-top:100px;">Add Medicines</h2>
    <div class="row container" style="margin-bottom:80px;">
        <div class="col-md-8">
            <div class="form-container">
                <form asp-action="Index" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="disease_category" class="control-label"></label>
                                <select asp-for="disease_category" class="form-control" asp-items="@(ViewBag.Categories)" style="border: 1px solid #f1f1f1;
            border-color: black;">
                                    <option value="">Select a category</option>
                                </select>
                                <span asp-validation-for="disease_category" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="ImageFile" class="control-label"></label>
                                <!-- Use the ImageFile property for file upload -->
                                <input asp-for="ImageFile" type="file" class="form-control" />
                                <span asp-validation-for="ImageFile" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="medicine_name" class="control-label"></label>
                                <input asp-for="medicine_name" class="form-control" />
                                <span asp-validation-for="medicine_name" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="brand_name" class="control-label"></label>
                                <input asp-for="brand_name" class="form-control" />
                                <span asp-validation-for="brand_name" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="mfd" class="control-label"></label>
                                <input asp-for="mfd" class="form-control" type="date" />
                                <span asp-validation-for="mfd" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Expd" class="control-label"></label>
                                <input asp-for="Expd" class="form-control" type="date" />
                                <span asp-validation-for="Expd" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="composition" class="control-label"></label>
                                <input asp-for="composition" class="form-control" />
                                <span asp-validation-for="composition" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="formulation_type" class="control-label"></label>
                                <input asp-for="formulation_type" class="form-control" /><br />
                                <span asp-validation-for="formulation_type" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="weight" class="control-label"></label>
                                <input asp-for="weight" class="form-control" />
                                <span asp-validation-for="weight" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="cost" class="control-label"></label>
                                <input asp-for="cost" class="form-control" />
                                <span asp-validation-for="cost" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="text-left">
                        <input type="submit" value="Save" class="btn btn-primary btn-lg mt-4 mb-0 pt-1 pb-1" />
                    </div>

                </form>
            </div>
        </div>
    </div>

</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script>
            $(document).ready(function () {
                // Remove the message overlay after a certain delay
                setTimeout(function () {
                    $("#messageCenter").fadeOut();
                }, 1000); // Change the delay as needed
            });
        </script>

    }
}



