@model DataAccessLayer.Domain.Medicine
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Disease.cshtml";
}

<style>
    /* Your CSS styles here */

    h1 {
        margin-top: 65px;
        margin-left: 50px;
        font-size: 28px;
    }

    /* Use the Bootstrap grid classes to create a two-column layout */
    .form-group {
        display: inline-block;
        width: 45%;
        margin-right: 5%;
        margin-bottom: 20px;
    }

        .form-group input {
            border: 1px solid #f1f1f1;
            border-color: black;
        }
        /* Clear the right margin for the last form-group in each row */
        .form-group:nth-child(2n+2) {
            margin-right: 0;
        }

    .btn-primary {
        background-color: #244b81;
        color: #fff;
    }

    .btn-secondary {
        background-color: saddlebrown;
        color: #fff;
    }

    .mt-3 {
        margin-top: 15px;
    }

    .mt-4 {
        margin-top: 20px;
        padding-top: 5px; /* Adjust the top padding of the form container */
        padding-bottom: 20px; /* Adjust the bottom padding of the form container */
    }

    .btn-lg {
        padding: 8px 20px;
        font-size: 18px;
    }

    .form-container {
        margin-top: 8px; /* Adjust the margin-top value as needed */
        /*background-color: #F7CAC9;*/
        /* border: 1px solid #ccc;*/
        padding: 20px;
        margin-left: 30px;
        width: 95%;
        max-width: 900px;
        height: 400px;
        /* overflow-y: auto; */
        /* Add scroll if content exceeds container height */
        position: relative; /* Add position relative for positioning the Save button */
        border: 3px solid #f1f1f1;
        border-color: #244b81;
    }

        /* Position the Save button at the bottom left inside the form container */
        .form-container input[type="submit"] {
            position: absolute;
            bottom: 10px;
            left: 20px;
        }
</style>
<h1>Add Medicines</h1>
<div class="row container">
    <div class="col-md-8">
        <div class="form-container">
            <form asp-action="Index" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="disease_category" class="control-label"></label>
                    <select asp-for="disease_category" class="form-control" asp-items="@(ViewBag.Categories)" style="border: 1px solid #f1f1f1;
        border-color: black" ;>
                        <option value="">Select a category</option>
                    </select>
                    <span asp-validation-for="disease_category" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ImageFile" class="control-label"></label>
                    <!-- Use the ImageFile property for file upload -->
                    <input asp-for="ImageFile" type="file" class="form-control" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="medicine_name" class="control-label"></label>
                    <input asp-for="medicine_name" class="form-control" />
                    <span asp-validation-for="medicine_name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="brand_name" class="control-label"></label>
                    <input asp-for="brand_name" class="form-control" />
                    <span asp-validation-for="brand_name" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="mfd" class="control-label"></label>
                    <input asp-for="mfd" class="form-control" type="date" />
                    <span asp-validation-for="mfd" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Expd" class="control-label"></label>
                    <input asp-for="Expd" class="form-control" type="date" />
                    <span asp-validation-for="Expd" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="weight" class="control-label"></label>
                    <input asp-for="weight" class="form-control" />
                    <span asp-validation-for="weight" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="cost" class="control-label"></label>
                    <input asp-for="cost" class="form-control" />
                    <span asp-validation-for="cost" class="text-danger"></span>
                </div>

                <!-- The submit button is positioned inside the form container at the bottom left -->
                <input type="submit" value="Save" class="btn btn-primary btn-lg" onclick="showMessage()" />

            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script>
            function showMessage() {
                var requiredFields = [
                    "disease_category",
                    "ImageFile",
                    "medicine_name",
                    "brand_name",
                    "mfd",
                    "Expd",
                    "weight",
                    "cost"
                ];

                var allFieldsFilled = true;

                requiredFields.forEach(function (fieldName) {
                    var field = document.getElementById(fieldName);
                    if (!field.value) {
                        allFieldsFilled = false;
                    }
                });

                if (allFieldsFilled) {
                    alert("Data Inserted!");
                } else {
                    alert("Please enter values in all the required fields.");
                }
            }
        </script>
    }
}
