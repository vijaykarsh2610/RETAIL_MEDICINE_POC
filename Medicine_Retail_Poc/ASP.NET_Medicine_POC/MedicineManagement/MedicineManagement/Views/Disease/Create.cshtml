@model DataAccessLayer.Domain.Disease

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/Disease.cshtml";
}


<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
    <!-- Add this section to include Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .centered-alert {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 9999;
        }

        h1 {
            margin-top: 100px;
            margin-bottom: 10px;
            margin-left: 52px;
            font-size: 28px;
        }

        .form-container {
            border: 3px solid #244b81;
            padding: 30px;
            border-radius: 5px;
            /* background-color: #F7CAC9;*/
            min-height: 350px;
            /* max-width: 350px; */
            margin-left: 30px;
        }

        label {
            margin-bottom: 20px;
            display: block;
            font-size: 16px;
        }

        input[type="text"],
        select {
            margin-bottom: 25px;
            padding: 12px;
            font-size: 16px;
            border: 1px solid #f1f1f1;
            border-color: black;
        }

        .form-group.mt-4 {
            margin-top: auto; /* Align the "Save" button towards the bottom */
            padding-top: 5px;
            padding-bottom: 5px;
        }

        .form-group input {
            border: 1px solid #f1f1f1;
            border-color: black;
        }

        .btn-primary.btn-lg {
            padding: 10px 20px;
            font-size: 18px;
            display: block; /* Center the button horizontally */
            margin: 0;
            background-color: #244b81;
        }

    </style>
</head>
<body>
    @if (ViewBag.LoginMessage != null)
    {
        <div class="centered-alert" id="messageOverlay">
            <div class="alert alert-@(ViewBag.IsAdmin ? "success" : "danger")">
                @ViewBag.LoginMessage
            </div>
        </div>
    }

    @if (TempData["Message"] != null)
    {
        <div class="centered-alert" id="messageOverlay">
            <div class="alert alert-success">@TempData["Message"]</div>
        </div>
    }

    <h1 margin-bottom:100px;>Add Diseases</h1>

    <div class="row container">
        <div class="col-md-8">
            <div class="form-container">

                @* @if (ViewBag.LoginMessage != null)
                {
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                @ViewBag.LoginMessage <!-- Display the actual message -->
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                }*@

                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="DiseaseCategory" class="control-label"></label>
                        <select asp-for="DiseaseCategory" class="form-control" asp-items="@(ViewBag.Categories)" style="border: 1px solid #f1f1f1;
        border-color: black" ;>
                            <option value="">Select a category</option>
                        </select>
                        <span asp-validation-for="DiseaseCategory" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ImageFile" class="control-label"></label>
                        <!-- Use the ImageFile property for file upload -->
                        <input asp-for="ImageFile" type="file" class="form-control" />
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-4">
                        <input type="submit" value="Save" class="btn btn-primary btn-lg" />
                    </div>

                </form>
            </div>

        </div>
    </div>

    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")

        <!-- Include jQuery -->
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

        <!-- Include jQuery Validation plugin -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>

        <script>
            $(document).ready(function () {
                // Remove the message overlay after a certain delay
                setTimeout(function () {
                    $("#messageOverlay").fadeOut();
                }, 1000); // Change the delay as needed
            })

        </script>
    }

</body>
</html>
