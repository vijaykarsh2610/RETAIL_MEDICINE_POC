@model DataAccessLayer.Domain.Disease

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/Disease.cshtml";
}

<style>
    /* Your existing styles here */

    h1 {
        margin-top: 20px;
        margin-left: 30px; /* Add more left margin to the Disease heading */
    }

    .form-container {
        border: 1px solid #ccc;
        padding: 30px; /* Add more padding around the form container */
        border-radius: 5px;
        background-color: #f9f9f9;
        /* Decrease the height of the form container */
        min-height: 350px; /* Reduce the height of the form container */
        /* Decrease the width of the form container */
        /* max-width: 350px; */
        margin-left: 30px; /* Add more left margin to the form container */
    }

    label {
        margin-bottom: 20px; /* Increase the margin between label and control */
        display: block;
        font-size: 16px; /* Increase the size of labels */
    }

    input[type="text"],
    select {
        margin-bottom: 25px; /* Increase the margin between controls */
        padding: 12px; /* Increase the padding of controls */
        font-size: 16px; /* Increase the size of controls */
    }

    .form-group.mt-4 {
        margin-top: auto; /* Align the "Save" button towards the bottom */
    }

    .btn-primary.btn-lg {
        padding: 10px 20px; /* Adjust the height of the "Save" button */
        font-size: 16px; /* Adjust the font size of the "Save" button */
    }

    /* The rest of your styles */
</style>

<h1>Diseases</h1>

<div class="row">
    <div class="col-md-8">
        <div class="form-container">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="DiseaseCategory" class="control-label"></label>
                    <select asp-for="DiseaseCategory" class="form-control" asp-items="@(ViewBag.Categories)">
                        <option value="">Select a category</option>
                    </select>
                    <span asp-validation-for="DiseaseCategory" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ImageFile" class="control-label"></label>
                    <!-- Use the ImageFile property for file upload -->
                    <input asp-for="ImageFile" type="file" class="form-control" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>

                <div class="form-group mt-4">
                    <input type="submit" value="Save" class="btn btn-primary btn-lg" onclick="showMessage()" />
                </div>

            </form>
        </div>
        @* <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>*@
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        function showMessage() {
            alert("Data saved successfully!");
        }
    </script>
}