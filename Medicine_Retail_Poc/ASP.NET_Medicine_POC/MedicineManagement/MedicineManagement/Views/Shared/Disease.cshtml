<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MedicineManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MedicineManagement.styles.css" asp-append-version="true" />
    <style>
        html a{
            font-family: monospace;
        }

        #helloLink.active {
            background-color: #5893d4; /* Set the desired background color */
            color: white; /* Set text color to ensure readability */
            border-radius: 25px;
        }

        ul li a:hover {
            background-color: cadetblue;
            border-radius: 25px;
            height: 45px;
        }

        ul li a {
            display: block;
            color: white;
            
            text-decoration: none;
            font-size: 20px;
            padding: 10px 20px;
        }

        ul li p {
            display: block;
            color: gold;
            font-weight: bold;
            text-decoration: none;
            font-size: 20px;
            padding: 10px 20px;
            font-style: italic;
            height:0px;
        }

        .side_bar{
            margin-top: 100px;
        }

        /* Active navigation item style */

        /*
                .sidebar ul li a.active {
                    background-color: darkcyan;
                }*/


        .sidebar ul li a.active {
            background-color: #3a6ea5;
            color: white; /* Set text color to ensure readability */
        }
    </style>

</head>
<body style="height: 100%; margin: 0;">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow fixed-top" style="background-color: #244b81; width:100%">
            @*  <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow" style="background-color: #244b81; width:100%">*@
            <div class="container-fluid">
                <div style="display:flex">
                    <img src="~/images/Medint.png" alt="Logo" height="78" class="d-inline-block align-text-top">
                    <a class="navbar-brand font-weight-bold text-white" style="font-size: 20px; font-weight: bold; margin-top:20px;" asp-area="" asp-controller="Home" asp-action="Index">Med-Ent</a>
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end" style="margin-right:40px;">
                    <!-- Use justify-content-end to align items to the right -->
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            // add a list item for authenticated user to display user name and logout link
                            <li class="nav-item">
                                <p id="" class="" asp-area="" asp-controller="Home" asp-action="Index">Hello @User.Identity.Name!</p>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Disease" asp-action="Home">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Logout" asp-action="Logout"> Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Disease" asp-action="Home">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Login" asp-action="Index">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Registration" asp-action="Index">SignUp</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>

    </header>
    <div style="display: flex; flex-direction: row; height: 100%;">
        <!-- Sidebar -->
        <div class="sidebar" style="width: 200px; background-color: cadetblue; color: white; height: 100%; position: fixed; display: flex; flex-direction: column; align-items: center; margin-top:30px;">
            <ul class="side_bar" style="list-style-type: none; padding: 0;">
                <li style="margin-bottom: 100px; margin-top: 90px; text-align: center;">
                    <a href="/Disease/Create" class="disease-link">Disease</a>
                </li>
                <li style="margin-bottom: 70px; text-align: center;">
                    <a href="/Medicine/Index" class="medicine-link">Medicine</a>
                </li>
            </ul>
        </div>

        <!-- Main Content -->
        <div style="flex: 1; margin-left: 200px;">
            @RenderBody()
        </div>
    </div>

    <footer class="" style="background-color: #244b81; color: white; position:fixed; bottom: 0; width: 100%; height:72px;">
        <div class="container mb-3 text-muted" style="margin-top:20px; margin-right:208px;">
            &copy; 2023 MedicineRetail Terms & Privacy
        </div>
    </footer>


    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }
    @RenderSection("Scripts", required: false)

    <!-- jQuery script for active navigation item -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            // Get the current URL path
            var path = window.location.pathname;

            // Find the corresponding navigation link and add the active class
            $('.sidebar a').each(function () {
                var href = $(this).attr('href');
                if (path === href) {
                    $(this).addClass('active');
                }
            });
            //Add the active class to the specific menu item with id 'helloLink'
            $('#helloLink').addClass('active');
        });
    </script>
</body>
</html>
